<h1>Editing Listing</h1>

<br>

<%= form_with(model: @listing, url: admin_listing_path, local: true) do |form| %>

  <% if @listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
        <% @listing.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <table>
  <% @listing.attributes.each do |key, value| %>
    <tr>
      <td><%= key %></td>
      <% if key.to_sym.in?(@read_only_fields) %>
        <td><%= form.text_field key.to_sym, value: value, disabled: true %><td>
      <% else %>
        <td><%= form.text_field key.to_sym, value: value %><td>
      <% end %>
    </tr>
  <% end %>
  </table>

  <br>
  
  <div class='actions'>
    <%= form.submit %>
  </div>
<% end %>

<%= button_to 'Destroy', admin_listing_path(@listing), method: :delete %>
<%= link_to 'Back', :back %>
