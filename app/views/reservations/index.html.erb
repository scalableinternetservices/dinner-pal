<p id="notice"><%= notice %></p>

<h1><%= current_user.name %>'s reservations</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Chef</th>
      <th>Location</th>
      <th>Start time</th>
      <th>End time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.listing.title %></td>
        <td><%= reservation.listing.user.name %></td>
        <td><%= reservation.listing.location %></td>
        <td><%= reservation.start_time %></td>
        <td><%= reservation.end_time %></td>
        <td><%= link_to 'Show', reservation %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td><%= button_to "Delete", reservation, :method => "delete", class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
